<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fluxograma_da_equipe1.CadastroCliente"
             BackgroundColor="LightPurple">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Cliente" 
                   FontSize="Large" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" 
                   Margin="0,20,0,20"/>

            <StackLayout Orientation="Horizontal" VerticalOptions="Start">
                <Entry Placeholder="Search" HorizontalOptions="FillAndExpand"/>
                <ImageButton Source="search_icon.png" WidthRequest="30" HeightRequest="30"/>
            </StackLayout>

            <StackLayout Spacing="10">
                <StackLayout Orientation="Horizontal">
                    <Entry Placeholder="Field 1" HorizontalOptions="FillAndExpand"/>
                    <ImageButton Source="save_icon.png" WidthRequest="30" HeightRequest="30"/>
                    <ImageButton Source="delete_icon.png" WidthRequest="30" HeightRequest="30"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Entry Placeholder="Field 2" HorizontalOptions="FillAndExpand"/>
                    <ImageButton Source="save_icon.png" WidthRequest="30" HeightRequest="30"/>
                    <ImageButton Source="delete_icon.png" WidthRequest="30" HeightRequest="30"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Entry Placeholder="Field 3" HorizontalOptions="FillAndExpand"/>
                    <ImageButton Source="save_icon.png" WidthRequest="30" HeightRequest="30"/>
                    <ImageButton Source="delete_icon.png" WidthRequest="30" HeightRequest="30"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Entry Placeholder="Field 4" HorizontalOptions="FillAndExpand"/>
                    <ImageButton Source="save_icon.png" WidthRequest="30" HeightRequest="30"/>
                    <ImageButton Source="delete_icon.png" WidthRequest="30" HeightRequest="30"/>
                </StackLayout>
            </StackLayout>

            <Button Text="+" HorizontalOptions="Center" Margin="0,20,0,20" Clicked="OnAddFieldClicked"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Text="CONFIRMAR" 
                        BackgroundColor="Green" 
                        TextColor="White"
                        Command="{Binding ConfirmCommand}"
                        Grid.Row="0" Grid.Column="0"
                        Margin="5"/>

                <Button Text="DELETAR" 
                        BackgroundColor="Red" 
                        TextColor="White"
                        Command="{Binding DeleteCommand}"
                        Grid.Row="0" Grid.Column="1"
                        Margin="5"/>

                <Label Text="DESEJA SALVAR ISSO?" 
                       Grid.Row="1" Grid.Column="0"
                       HorizontalOptions="Center"/>
                <Label Text="DESEJA APAGAR ISSO?" 
                       Grid.Row="1" Grid.Column="1"
                       HorizontalOptions="Center"/>
                
                <StackLayout Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="SIM" BackgroundColor="LightGreen" Clicked="OnSaveYesClicked"/>
                    <Button Text="NÃO" BackgroundColor="LightCoral" Clicked="OnSaveNoClicked"/>
                </StackLayout>
                <StackLayout Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="SIM" BackgroundColor="LightGreen" Clicked="OnDeleteYesClicked"/>
                    <Button Text="NÃO" BackgroundColor="LightCoral" Clicked="OnDeleteNoClicked"/>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>