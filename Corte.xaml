<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourNamespace.CortePage"
             BackgroundColor="#E0BBE4">

    <StackLayout Padding="30" VerticalOptions="CenterAndExpand">

        <!-- Título -->
        <Label Text="CORTE"
               FontSize="Large"
               HorizontalOptions="Center"
               TextColor="Black"
               Margin="0,0,0,20"/>

        <!-- Campo Id_Produto -->
        <StackLayout Orientation="Horizontal">
            <Label Text="Id_Produto:"
                   VerticalOptions="Center"
                   TextColor="Black"/>
            <Entry Placeholder="Id_Produto"
                   HorizontalOptions="FillAndExpand"
                   BackgroundColor="White"/>
        </StackLayout>

        <!-- Campo Quantidade -->
        <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
            <Label Text="QUANTIDADE:"
                   VerticalOptions="Center"
                   TextColor="Black"/>
            <Entry Placeholder="Quantidade"
                   HorizontalOptions="FillAndExpand"
                   BackgroundColor="White"/>
        </StackLayout>

        <!-- Campo Data de Entrada -->
        <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
            <Label Text="DATA DE ENTRADA:"
                   VerticalOptions="Center"
                   TextColor="Black"/>
            <Entry Placeholder="Data de Entrada"
                   HorizontalOptions="FillAndExpand"
                   BackgroundColor="White"/>
        </StackLayout>

        <!-- Campo Data de Saída -->
        <StackLayout Orientation="Horizontal" Margin="0,10,0,20">
            <Label Text="DATA DE SAÍDA:"
                   VerticalOptions="Center"
                   TextColor="Black"/>
            <Entry Placeholder="Data de Saída"
                   HorizontalOptions="FillAndExpand"
                   BackgroundColor="White"/>
        </StackLayout>

        <!-- Botões de Salvar e Apagar -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20">
            <Button Text="SALVAR"
                    BackgroundColor="LightGreen"
                    TextColor="Black"
                    Clicked="OnSaveClicked"
                    WidthRequest="100"
                    Margin="0,0,10,0"/>
            <Button Text="APAGAR"
                    BackgroundColor="LightCoral"
                    TextColor="Black"
                    Clicked="OnDeleteClicked"
                    WidthRequest="100"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
